#!/bin/bash
[ -z "$1" ] && echo "Please specify file full path with name" && exit
source ./.env

docker-compose exec -T db mysql -u root -p${MYSQL_ROOT_PASSWORD} ${MYSQL_DATABASE} < "$@";

